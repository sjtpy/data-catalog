generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
  id           String   @id @default(uuid())
  name         String
  type         String
  description  String
  propertyIds  String[] @default([])
  createTime   DateTime @default(now()) @map("create_time")
  updateTime   DateTime @updatedAt @map("update_time")
  deletedAt    DateTime? @map("deleted_at")

  @@map("events")
}

model Property {
  id           String   @id @default(uuid())
  name         String
  type         String
  description  String
  createTime   DateTime @default(now()) @map("create_time")
  updateTime   DateTime @updatedAt @map("update_time")
  deletedAt    DateTime? @map("deleted_at")

  @@map("properties")
}

model TrackingPlan {
  id           String   @id @default(uuid())
  name         String
  description  String
  eventIds     String[] @default([]) @map("event_ids")
  createTime   DateTime @default(now()) @map("create_time")
  updateTime   DateTime @updatedAt @map("update_time")
  deletedAt    DateTime? @map("deleted_at")

  @@map("tracking_plans")
}
